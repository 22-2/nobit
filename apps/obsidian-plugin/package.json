{
    "name": "@nobit/obsidian-plugin",
    "version": "1.0.0",
    "description": "This is a sample plugin for Obsidian (https://obsidian.md)",
    "main": "main.js",
    "scripts": {
        "dev": "pnpm dlx tsx esbuild.config.mts",
        "build": "pnpm dlx tsx esbuild.config.mts production",
        "version": "node version-bump.mjs && git add manifest.json versions.json",
        "check-types": "tsc -noEmit -skipLibCheck",
        "repomix": "pnpm dlx repomix && code ./repomix-output.md",
        "setup-symlink": "node scripts/setup-symlink.mjs",
        "rename-plugin": "node scripts/rename-plugin.mjs",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:debug": "cross-env DEBUG=pw:api playwright test"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@nobit/libch": "workspace:*",
        "@nobit/ui": "workspace:*",
        "comlink": "^4.4.2",
        "loglevel": "^1.9.2",
        "svelte": "5.38.6",
        "tiny-invariant": "^1.3.3"
    },
    "devDependencies": {
        "@nobit/esbuild-config": "workspace:*",
        "@nobit/typescript-config": "workspace:*",
        "@playwright/test": "^1.49.1",
        "@sprout2000/esbuild-copy-plugin": "^1.1.19",
        "@tsconfig/svelte": "5.0.5",
        "@types/node": "24.3.1",
        "builtin-modules": "5.0.0",
        "cross-env": "^7.0.3",
        "dotenv": "^17.2.2",
        "electron": "^38.1.2",
        "esbuild": "0.25.9",
        "esbuild-plugin-inline-worker": "^0.1.1",
        "esbuild-svelte": "^0.9.3",
        "obsidian": "^1.8.7",
        "obsidian-typings": "4.50.0",
        "playwright": "^1.49.1",
        "playwright-core": "^1.49.1",
        "svelte-preprocess": "^6.0.3",
        "tslib": "^2.8.1",
        "typescript": "5.9.2"
    }
}
