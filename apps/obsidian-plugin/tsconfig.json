{
    "extends": "@nobit/typescript-config/base",
    "compilerOptions": {
        "baseUrl": ".",
        "verbatimModuleSyntax": true,
        "downlevelIteration": true,
        "types": ["node", "obsidian-typings"]
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.svelte"
    ],
    "exclude": ["node_modules/*"]
}
