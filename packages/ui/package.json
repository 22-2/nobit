{
    "name": "@nobit/ui",
    "version": "0.0.0",
    "type": "module",
    "private": true,
    "exports": {
        "./*": "./src/*.ts"
    },
    "scripts": {
        "test": "vitest",
        "test:unit": "vitest run --project unit --passWithNoTests",
        "test:unit:watch": "vitest --project unit",
        "test:storybook": "vitest run --project storybook",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:coverage": "vitest run --coverage",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "check-types": "tsc -noEmit -skipLibCheck"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "4.1.1",
        "@mdx-js/react": "^3.1.1",
        "@playwright/test": "^1.55.0",
        "@storybook/addon-a11y": "9.1.7",
        "@storybook/addon-docs": "9.1.7",
        "@storybook/addon-svelte-csf": "5.0.8",
        "@storybook/addon-vitest": "9.1.7",
        "@storybook/svelte-vite": "9.1.7",
        "@sveltejs/vite-plugin-svelte": "^6.2.0",
        "@tabler/icons-svelte": "^3.35.0",
        "@testing-library/svelte": "^5.2.8",
        "@tsconfig/svelte": "^5.0.5",
        "@vitest/browser": "3.2.4",
        "@vitest/coverage-v8": "3.2.4",
        "esbuild-svelte": "^0.9.3",
        "jsdom": "^27.0.0",
        "markdown-to-jsx": "^7.7.13",
        "playwright": "^1.55.0",
        "storybook": "9.1.7",
        "svelte": "^5.39.3",
        "svelte-preprocess": "^6.0.3",
        "vite": "^7.1.6",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "@nobit/typescript-config": "workspace:*",
        "date-fns": "^4.1.0"
    }
}
