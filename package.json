{
    "name": "nobit",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "check-types": "turbo run check-types",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "prepare": "husky"
    },
    "devDependencies": {
        "husky": "^9.1.7",
        "lint-staged": "^16.1.6",
        "prettier": "^3.6.2",
        "prettier-plugin-svelte": "^3.4.0",
        "turbo": "^2.5.6",
        "typescript": "5.9.2"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,css,md,svelte}": [
            "prettier --write"
        ]
    },
    "packageManager": "pnpm@10.17.0",
    "engines": {
        "node": ">=18"
    }
}
